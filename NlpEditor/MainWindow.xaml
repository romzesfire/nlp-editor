<Window x:Class="NlpEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NlpEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TreeView x:Name="AreasTree" Margin="10,46,0,10" HorizontalAlignment="Left" Width="197">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Nodes}">
                    <Button x:Name="FormulationsSelect" BorderThickness="0" Content="{Binding Name}" Tag="{Binding}" Background="White"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
        <ListBox Margin="210,46,0,10" HorizontalAlignment="Left" HorizontalContentAlignment="Stretch" Width="190">
            <Grid  Height="109" >
                <Border Background="#FF737CE4" CornerRadius="5"></Border>
                <TextBlock TextWrapping="Wrap" FontSize="10"  Text="Код" Margin="10,1,0,93" HorizontalAlignment="Left" />
                <TextBlock TextWrapping="Wrap" FontSize="10"  Text="Значение" Margin="10,31,0,63" HorizontalAlignment="Left" />
                <TextBox TextWrapping="Wrap" Text="{Binding Code}" FontSize="10" VerticalContentAlignment="Center" Margin="10,16,10,79"/>
                <Button ToolTip="Удалить" Margin="160,0,0,93"  FontSize="8" Content="X" FontFamily="Arial Black" Background="#FF5259C1" BorderBrush="#FF002CB5" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                            <!--<Setter Property="" Value="Fuchsia"/>-->
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBox TextWrapping="Wrap" Text="{Binding Value}" FontSize="10" VerticalContentAlignment="Center" Margin="10,45,10,50"/>
                <TextBox Text="{Binding Name}" Margin="10,63,10,5" />
            </Grid>
        </ListBox>
        <Grid Background="#FFD8D8D8" Margin="404,46,10,0" Height="56" VerticalAlignment="Top">
            <Menu HorizontalAlignment="Left" Margin="1,38,0,0" VerticalAlignment="Top" Background="White">
                <MenuItem FontSize="10" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Header="Меню" Foreground="Black" RenderTransformOrigin="1.968,0.859" Height="16">
                    <MenuItem Header="Выделить все" />
                    <MenuItem Header="Снять выделение" />
                    <MenuItem Header="Удалить выбранное" />
                    <MenuItem Header="Переместить выбранное" />
                </MenuItem>
            </Menu>
            <TextBox TextWrapping="Wrap" FontSize="9" Text="{Binding SelectedSymptom.Name}" VerticalContentAlignment="Center" Margin="54,4,9,0" Height="14" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="7,4,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" ><Run Language="ru-ru" Text="Симптом"/></TextBlock>
            <ComboBox x:Name="StatusSelector" FontSize="9" ItemsSource="{Binding SelectedSymptom.Statuses}" SelectionChanged="StatusSelector_OnSelected" Margin="0,38,157,2" HorizontalAlignment="Right" Width="106">
                
                <!--<ComboBox.LayoutTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                </ComboBox.LayoutTransform>-->

            </ComboBox>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="90,39,0,0" HorizontalAlignment="Left"  VerticalAlignment="Top" ><Run Text="С"/><Run Language="ru-ru" Text="татус"/></TextBlock>
            <ComboBox x:Name="GenderSelector" FontSize="9" SelectionChanged="GenderSelector_OnSelected" ItemsSource="{Binding SelectedSymptom.Genders}" Margin="0,38,9,2" HorizontalAlignment="Right" Width="106">
                <!--<TextBlock x:Name="Active1" FontSize="9" Text="Active" />-->
                <!--<ComboBox.LayoutTransform>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                </ComboBox.LayoutTransform>-->

            </ComboBox>
            <TextBlock TextWrapping="Wrap" FontSize="10" HorizontalAlignment="Left"  VerticalAlignment="Top" Text="Пол" Margin="250,39,0,0"/>
            <TextBox TextWrapping="Wrap" Text="{Binding SelectedSymptom.Code}" FontSize="10" VerticalContentAlignment="Center" Margin="54,21,203,21"/>
            <TextBox TextWrapping="Wrap" Text="{Binding SelectedSymptom.Value}" FontSize="10" VerticalContentAlignment="Center" Margin="248,21,9,21"/>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="7,0,0,0" HorizontalAlignment="Left" Text="Код" VerticalAlignment="Center" ></TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="198,0,0,0" HorizontalAlignment="Left" Text="Значение" VerticalAlignment="Center" />
        </Grid>
        <ListBox HorizontalContentAlignment="Stretch" Margin="404,101,10,10">
            <Grid Height="26">
                <Border Background="#FF737CE4" CornerRadius="5"></Border>
                <TextBox Margin="21,4,21,4" />
                <CheckBox IsChecked="True" Margin="4,5,355,0"/>
                <!--<CheckBox.LayoutTransform>
                    <ScaleTransform ScaleX="0.9" ScaleY="0.9" />
                </CheckBox.LayoutTransform>
                </CheckBox>-->
                <Button ToolTip="Удалить"  FontSize="8" Content="X" FontFamily="Arial Black" Background="#FF5259C1" BorderBrush="#FF002CB5" HorizontalAlignment="Right" Width="21" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </ListBox>

    </Grid>
</Window>
